@model EpamLibrary.WEB.Models.RequestVM.RequestViewModel

@{
    ViewBag.Title = "Confirm";
}

@section Body{

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="request-form mt-5">
            <div class="cotainer">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header"><h3>Confirm request</h3></div>
                            <div class="card-body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)
                                <form action="" method="">

                                    <div class="form-group row">
                                        <label class="col-md-4 col-form-label text-md-right">User</label>
                                        <div class="display-field">
                                            @Html.TextBoxFor(model => model.ClientName, new { disabled = "disabled", @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-4 col-form-label text-md-right">Book</label>
                                        <div class="display-field">
                                            @Html.TextBoxFor(model => model.BookName, new { disabled= "disabled", @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.Period, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.Period, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Period, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6 offset-md-4">
                                        <button type="submit" class="btn btn-primary">
                                            Confirm
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
