@model EpamLibrary.WEB.Models.BookVM.BookDisplayViewModel
@{
    ViewBag.Title = "Home Page";
}
@section Body{
    <div class="row">
        <div class="col-lg-9">
            <div class="row">
                @if (Model.Books.Count() == 0)
                {
                    <h2>Ничего не найдено</h2>
                }
                @foreach (var book in Model.Books)
                {

                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@Url.Action("Book", "Home", new { id = book.Id })" class="text-dark">@book.Name</a>
                                </h4>
                                <p class="card-text"></p>
                            </div>
                            <div class="card-footer text-muted">
                                <a> @book.PublicationDate.ToShortDateString()</a>
                            </div>
                        </div>
                    </div>


                }
            </div>
        </div>
        <div class="col-lg-3">
            <form>
                <div class="input-group">
                    <input type="text" class="form-control" name="search" placeholder="Search this library">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="submit" value="Search">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="form-horizontal">
                    <div class="form-group">
                        <p>From</p>
                        <input type="date" class="form-control" name="start">
                    </div>
                    <div class="form-group form-group-sm">
                        <p>To</p>
                        <input type="date" class="form-control" name="end">
                    </div>
                    <div class="form-group-sm">
                        <input type="submit" value="Search" class="btn btn-secondary" />
                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        {
                            <a href="@Url.Action("AddBook", "Book")" class="btn btn-secondary">Add Book</a>
                        }
                    </div>
                </div>
            </form>
            @*<h1 class="my-4">Genres</h1>
            <div class="list-group">
                <a href="#" class="list-group-item active">Genre 1</a>
                <a href="#" class="list-group-item">Genre 2</a>
                <a href="#" class="list-group-item">Genre 3</a>
            </div>*@
        </div>
    </div>
}
